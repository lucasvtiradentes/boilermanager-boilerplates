{
  "name": "puppeteer-pkg",
  "version": "0.0.1",
  "description": "âš¡ a basic puppeteer-pkg boilerplate.",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "homepage": "https://github.com/username/repository",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/repository.git"
  },
  "bugs": {
    "url": "https://github.com/username/repository/issues"
  },
  "author": {
    "name": "your name",
    "email": "youremail@gmail.com"
  },
  "bin": {
    "main": "src/index.js"
  },
  "scripts": {
    "postinstall": "husky install",
    "commit": "cz",
    "prebuild": "rimraf ./dist",
    "build:check": "tsc --noEmit",
    "build": "tsc && cp ./package.json ./dist && pkg dist --out-path build",
    "postbuild": "ts-node ./resources/postbuild.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "start": "node ./dist/src/index.js",
    "dev": "ts-node ./src/index.ts",
    "dev:install": "npm install -g .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "scripts:commits": "ts-node ./resources/update-commits-configs.ts",
    "scripts:issues": "ts-node ./resources/show-all-open-issues.ts"
  },
  "dependencies": {
    "pkg": "^5.8.0",
    "puppeteer": "^19.2.2"
  },
  "devDependencies": {
    "@types/puppeteer": "^7.0.4",
    "@commitlint/cli": "^17.3.0",
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",
    "commitlint": "^17.4.1",
    "commitlint-config-gitmoji": "^2.2.9",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
