{
  "name": "chrome-extension",
  "version": "0.0.1",
  "description": "âš¡ a basic chrome-extension boilerplate.",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": {
    "name": "your name",
    "email": "youremail@gmail.com"
  },
  "homepage": "https://github.com/username/repository",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/repository.git"
  },
  "bugs": {
    "url": "https://github.com/username/repository/issues"
  },
  "scripts": {
    "postinstall": "husky install",
    "commit": "cz",
    "prebuild": "rimraf ./dist",
    "build:check": "tsc --noEmit",
    "build": "webpack --config resources/webpack.prod.js",
    "postbuild": "npm run scripts:copy",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "dev": "webpack --config ./resources/webpack.dev.js --watch",
    "dev:install": "npm install -g .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "scripts:commits": "ts-node ./resources/update-commits-configs.ts",
    "scripts:issues": "ts-node ./resources/show-all-open-issues.ts",
    "scripts:copy": "ts-node ./resources/copy-non-ignored-files-to-dist.ts"
  },
  "devDependencies": {
    "@types/chrome": "0.0.177",
    "copy-webpack-plugin": "^10.2.1",
    "ts-loader": "^9.2.6",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "glob": "^7.1.6",
    "webpack-merge": "^5.0.0",
    "@commitlint/cli": "^17.3.0",
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",
    "commitlint": "^17.4.1",
    "commitlint-config-gitmoji": "^2.2.9",
    "electron": "^21.0.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
