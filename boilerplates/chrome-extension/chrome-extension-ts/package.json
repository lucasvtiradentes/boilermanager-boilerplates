{
  "name": "chrome-extension",
  "version": "0.0.1",
  "description": "description",
  "license": "MIT",
  "author": {
    "name": "your name",
    "email": "youremail@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/repository.git"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "prebuild": "rimraf ./dist",
    "build:check": "tsc --noEmit",
    "build": "webpack --config webpack/webpack.prod.js",
    "postbuild": "npm run scripts:copy",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "dev": "webpack --config ./webpack/webpack.dev.js --watch",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "scripts:gitmoji": "ts-node ./scripts/gitmoji-setup.ts",
    "scripts:issues": "ts-node ./scripts/github-issues.ts",
    "scripts:copy": "ts-node ./scripts/post-build.ts"
  },
  "devDependencies": {
    "@types/chrome": "0.0.177",
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.9",

    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",

    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint-plugin-prettier": "^4.2.1",

    "copy-webpack-plugin": "^10.2.1",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.0.0",

    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",

    "glob": "^7.1.6",
    "husky": "^8.0.3",
    "rimraf": "^4.0.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
