{
  "name": "node-basic",
  "version": "0.0.1",
  "description": "âš¡ a basic nodejs-typescript boilerplate.",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "homepage": "https://github.com/username/repository",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/repository.git"
  },
  "bugs": {
    "url": "https://github.com/username/repository/issues"
  },
  "author": {
    "name": "your name",
    "email": "youremail@gmail.com"
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "start": "node ./dist/src/index.js",
    "dev": "ts-node ./src/index.ts",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "scripts:gitmoji": "ts-node ./scripts/gitmoji-setup.ts",
    "scripts:issues": "ts-node ./scripts/github-issues.ts"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.9",

    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",

    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "eslint": "^8.31.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",

    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",

    "husky": "^8.0.3",
    "rimraf": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
