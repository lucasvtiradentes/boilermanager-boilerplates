{
  "name": "ts-boilerplates",
  "version": "0.0.1",
  "description": "üìÅ typescript boilerplates pre-setted up modern and useful project tools.",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/ts-boilerplates.git"
  },
  "scripts": {
    "prepare": "husky install",
    "precommit": "npm run script:issues",
    "commit": "cz",
    "start": "npm run update:boilerplates",
    "update": "npm run update:json && npm run update:md && npm run update:projects",
    "update:json": "ts-node ./update/update-json.ts",
    "update:md": "ts-node ./update/update-readme.ts",
    "update:projects": "ts-node ./update/update-projects-readme.ts",
    "script:gitmoji": "ts-node ./scripts/gitmoji-setup.ts",
    "script:issues": "ts-node ./scripts/github-issues.ts"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",

    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",

    "dyn-markdown": "^1.1.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
